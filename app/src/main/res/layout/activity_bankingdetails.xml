<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="@drawable/appbackground"
    tools:context=".bankingdetails">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toofirststep"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#0F1272"
            android:elevation="5dp">
            >







            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Step3:Banking Details"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/gilroybold"
                android:textSize="20dp"
                android:textAlignment="center"

                />

        </androidx.appcompat.widget.Toolbar>



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/selectbank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="select bank name"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:backgroundTint="#ffffff"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/branchname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:backgroundTint="#ffffff"
                android:fontFamily="@font/gilroymedium"
                android:hint="Branchname"
                android:singleLine="true"
                android:textColor="@color/colorWhite"
                android:textColorHint="#ffffff"
                android:textSize="14dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/branchcode"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/gilroymedium"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:inputType="phone"
                android:textSize="14dp"
                android:hint="Branchcode)"
                android:backgroundTint="#ffffff"/>


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/accountname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/colorWhite"
                android:hint="Account Name"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/gilroymedium"
                android:textSize="14dp"
                android:layout_marginRight="16dp"
                android:backgroundTint="#ffffff"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/accountnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/gilroymedium"
                android:layout_marginRight="16dp"
                android:hint="Account Number"
                android:textSize="14dp"
                android:backgroundTint="#ffffff"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/accounttype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="select account type"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:backgroundTint="#ffffff"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

            <Button
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner"
                android:fontFamily="@font/gilroybold"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="NEXT" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/paynumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text="Email Address" />

        </com.google.android.material.textfield.TextInputLayout>








    </LinearLayout>





</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".confidentials"
    android:background="@drawable/appbackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="640dp">

        <ImageView
            android:id="@+id/imgView1"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="66dp"
            android:layout_marginTop="300dp"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="66dp" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:id="@+id/imageView"

            android:visibility="gone"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:hint="id_number"
            android:layout_marginTop="20dp"
            android:id="@+id/idnumber"
            android:visibility="visible"/>

        <Button
            android:id="@+id/selectid"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/idnumber"
            android:layout_alignParentStart="true"
            android:layout_marginStart="3dp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/gilroymedium"
            android:layout_marginTop="3dp"
            android:background="@drawable/corner"
             android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:text="click to uplooad id"
            android:textSize="16dp"
            android:layout_alignParentLeft="true"
             />

        <Button
            android:id="@+id/upload"
            android:background="@drawable/corner"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/selectid"
            android:layout_marginTop="2dp"
            android:text="uploadid"
            android:visibility="gone"

            />

        <Button
            android:id="@+id/Laststep"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="4 :Last Step Upload Your Id's"
            android:background="#0F1272"
            android:fontFamily="@font/gilroybold"
            android:textColor="#ffffff"
            />

        <EditText
            android:id="@+id/paynumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="67dp"
            android:layout_marginTop="230dp"
            android:ems="10"
            android:hint="paynubmber"
            android:fontFamily="@font/gilroymedium"
            android:textSize="14dp"
            android:textColor="@color/colorWhite"
            android:visibility="gone"
            android:inputType="textPersonName"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="67dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="480dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="317dp"
            android:background="#ffffff"
            app:srcCompat="@android:drawable/ic_menu_camera"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp" />


    </RelativeLayout>
</ScrollView>
